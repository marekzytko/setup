# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
  colors = true
  color_good = "#86dc34"
  color_bad  = "#ff0000"
  color_degraded = "#ff7b00"
  interval = 1 
  separator = "|"
}

order += "path_exists VPN"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "disk /"
#order += "load"
order += "memory"
order += "tztime local"

path_exists VPN {
        # path exists when a VPN tunnel launched
	# by nmcli/nm-applet is active
        path = "/proc/sys/net/ipv4/conf/tun0"
	format_down = "- No VPN connection -"
	separator_block_width = 30
}
wireless _first_ {
        format_up = "Wireless: (Signal Quality: %quality, SSID: %essid) %ip"
	format_down = "Wireless: DOWN"
	separator_block_width = 30
}

ethernet _first_ {
        format_up = "Ethernet: %ip (%speed)"
        format_down = "Ethernet: DOWN"
	separator_block_width = 30
}

battery all {
        format = "%status %percentage %remaining (%emptytime %consumption)"
	format_down = "- No battery -"
	status_chr = "⚡Charging ⚡"
	status_full = "Battery full."
	separator_block_width = 30
}

disk "/" {
        format = "Space left: %avail"
	separator_block_width = 30
}

memory {
        format = "RAM: %used/%available used"
        threshold_degraded = "2G"
        format_degraded = "MEMORY < %available"
	separator_block_width = 30
}

tztime local {
        format = "%H:%M:%S  %Y-%m-%d "
	min_width = 600
	align = "right"
}



